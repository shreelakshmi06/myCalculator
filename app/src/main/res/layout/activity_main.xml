<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allstate.mycalculator.MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <EditText android:id="@+id/etEquation"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@color/resultColor"
            android:text=""
            android:textSize="20sp"
            android:textAlignment="center"
            android:cursorVisible="false"/>


        <EditText android:id="@+id/etRes"
            android:layout_width="377dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@color/resultColor"
            android:text=""
            android:textSize="20sp"
            android:textAlignment="center"
            android:cursorVisible="false"/>

        <GridLayout
            android:layout_width="363dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button android:id="@+id/button1"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="1"
                android:textSize="20dp"/>

            <Button android:id="@+id/button2"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="2"
                android:textSize="20dp"/>

            <Button android:id="@+id/button3"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="2"
                android:layout_row="0"
                android:text="3"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonClear"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="3"
                android:layout_row="0"
                android:text="Clear"
                android:textSize="20dp"/>

            <Button android:id="@+id/button4"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="4"
                android:textSize="20dp"/>

            <Button android:id="@+id/button5"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="5"
                android:textSize="20dp"/>

            <Button android:id="@+id/button6"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="2"
                android:layout_row="1"
                android:text="6"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonAdd"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="3"
                android:layout_row="1"
                android:text="+"
                android:textSize="20dp"/>

            <Button android:id="@+id/button7"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="0"
                android:layout_row="2"
                android:text="7"
                android:textSize="20dp"/>

            <Button android:id="@+id/button8"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="8"
                android:textSize="20dp"/>

            <Button android:id="@+id/button9"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="2"
                android:layout_row="2"
                android:text="9"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonSub"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="3"
                android:layout_row="2"
                android:text="-"
                android:textSize="20dp"/>

            <Button android:id="@+id/button0"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="0"
                android:layout_row="3"
                android:text="0"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonPoint"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="1"
                android:layout_row="3"
                android:text="."
                android:textSize="20dp" />

            <Button android:id="@+id/buttonMul"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="2"
                android:layout_row="3"
                android:text="X"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonDiv"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="3"
                android:layout_row="3"
                android:text="/"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonSquare"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="1"
                android:layout_row="4"
                android:textAllCaps="false"
                android:text="x²"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonSuareRoot"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="2"
                android:layout_row="4"
                android:text="√"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonEqual"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="3"
                android:layout_row="4"
                android:text="Equal"
                android:textSize="20dp"/>

            <Button android:id="@+id/buttonPercentage"
                android:layout_width="90sp"
                android:layout_height="80sp"
                android:layout_column="0"
                android:layout_row="4"
                android:text="%"
                android:textSize="20dp"/>

        </GridLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

